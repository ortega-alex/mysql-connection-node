<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
	</head>
	<body>
		<nav class="navbar navbar-dark bg-dark">
			<a href="#" class="navbar-brand mx-auto">news</a>
		</nav>
		<div class="content">
			<div class="row">
				<div class="col-md-6 mt-4 text-center">
					<table class="table table-striped">
						<tr>
							<th>ID</th>
							<th>TITLE</th>
							<th>NEWS</th>
						</tr>
						<% for (var i = 0; i < news.length; i++) { %>
							<tr>
								<td><%= news[i].ID %></td>
								<td><%= news[i].TITLE %></td>
								<td><%= news[i].NEWS %></td>
							</tr>
						<% } %>
					</table>
				</div>

				<div class="col-md-6 mt-4 card">
					<form action="/news" method="post" class="card-body">
						<h3 class="card-title">Add News</h3>
						<div class="form-group">
							<input id="title" type="text" name="title" placeholder="Title" class="form-control">
						</div>
						<div class="form-group">
							<input type="text" name="news" class="form-control" placeholder="news">
						</div>
						<input type="submit" class="btn btn-primary">
					</form>
				</div>				
			</div>
		</div>
	</body>
	<script type="text/javascript">
		document.getElementById('title').focus();
	</script>
</html>